<h2>CALENDAR</h2>

<a class="btn btn-primary"href="/calendar/{{ data.appointment.id }}/edit">Edit Appointment</a>
<a class="btn btn-danger"href="/calendar/{{ data.appointment.id }}/delete">Delete Appointment</a>

<div class="panel panel-default">
    <div class="panel-body" >
        <div>
            <strong>Name </strong> {{data.appointment.username}}
        </div>
        <div>
            <strong>Date </strong> {{data.appointment.date}}
        </div>
        <div>
            <strong>Time </strong> {{data.appointment.time}}
        </div>
        <div>
            <strong>Color </strong> {{data.appointment.color}}
        </div>
    </div>
</div>
