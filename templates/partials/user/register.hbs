<h2>User Registration</h2>

<div class="ui inverted segment">
    <div class="ui inverted form">
        <form method='POST' action="/user/register" enctype="application/x-www-form-urlencoded">
            <div class="two fields">
                <div class="field">
                    <label>User Name</label>
                    <input type="text" name="username" placeholder="Username" value="{{data.user.username}}">
                </div>
                <div class="field">
                    <label>Password</label>
                    <input type="password" name="password" placeholder="Password" value="{{data.user.password}}">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Email</label>
                    <input type="email" name="email" value="{{data.user.email}}">
                </div>
            </div>
            <button class="ui submit button" type="submit">Register</button>
        </form>
    </div>
</div>
